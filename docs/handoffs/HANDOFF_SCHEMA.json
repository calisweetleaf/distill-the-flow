{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BB7 Distributed Cognition Handoff Packet",
  "type": "object",
  "required": [
    "run_id",
    "stage_id",
    "role",
    "state_hash_in",
    "state_hash_out",
    "files_changed",
    "verification",
    "result",
    "next_actions",
    "signal_type"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "stage_id": {
      "type": "string",
      "minLength": 1
    },
    "role": {
      "type": "string",
      "enum": [
        "planner_reasoner",
        "builder_executor",
        "finisher_polisher"
      ]
    },
    "state_hash_in": {
      "type": "string",
      "minLength": 1
    },
    "state_hash_out": {
      "type": "string",
      "minLength": 1
    },
    "files_changed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "verification": {
      "type": "object",
      "required": [
        "checks",
        "status"
      ],
      "properties": {
        "checks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "fail",
            "partial"
          ]
        },
        "evidence": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "result": {
      "type": "object",
      "required": [
        "summary"
      ],
      "properties": {
        "summary": {
          "type": "string"
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "risks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "signal_type": {
      "type": "string",
      "enum": [
        "forward",
        "revision_request",
        "escalation"
      ]
    },
    "coverage": {
      "type": "object",
      "properties": {
        "selected_tools": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "unused_categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rationale": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
